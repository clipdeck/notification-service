  "dependencies": {
    "@clipdeck/events": "file:../shared-events",
    "@clipdeck/types": "file:../shared-types",
    "@prisma/client": "^6.1.0",
    "fastify": "^5.1.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "zod": "^3.24.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
