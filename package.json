{
  "name": "@clipdeck/notification-service",
  "version": "0.1.0",
  "description": "Notification microservice for ClipDeck platform",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
